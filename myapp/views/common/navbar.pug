mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
        a(href="/", aria-label="Golden Goose").navbar-brand.mr-0
        div.mr-md-2
            img(src="/images/golden-goose.svg", height="36", width="36")
        div.collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="/") Home
                li.nav-item
                    a.nav-link(href="/leads") Leads
        div.navbar-right
            if user
                span.navbar-text Hello #{user.email}!
        div.navbar-right
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href='/signup') Sign Up
                li.nav-item
                    a.nav-link(href='/login') Login
                li.nav-item
                    a.nav-link(href='/logout') Logout